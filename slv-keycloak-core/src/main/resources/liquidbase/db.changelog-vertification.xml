<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro
        http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">

    <changeSet author="trinhhoanglong200@gmail.com" id="keycloak-init-verification-code-tbl">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="VERIFICATION_CODE"/>
            </not>
        </preConditions>
        <createTable tableName="VERIFICATION_CODE">
            <column name="ID" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="REALM_ID" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="USER_ID" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="PHONE_NUMBER" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="CODE" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="TRANSACTION_ID" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="DEVICE_ID" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="TYPE" type="VARCHAR(10)">
            </column>
            <column name="EXPIRES_AT" type="DATETIME"/>
            <column name="CREATED_AT" type="DATETIME"/>
        </createTable>

        <addPrimaryKey
                constraintName="PK_VERIFICATION_CODE"
                tableName="VERIFICATION_CODE"
                columnNames="ID"
        />

        <createIndex indexName="VERIFICATION_CODE_PHONE_NUMBER" tableName="VERIFICATION_CODE">
            <column name="REALM_ID" type="VARCHAR(100)"/>
            <column name="USER_ID" type="VARCHAR(100)"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
